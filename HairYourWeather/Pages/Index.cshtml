@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<!DOCTYPE html>
<html>

    <head>
        <title>Weather and Hair</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
        <style>
            body {
                background-image:url(NewFolder/WhiteRain.jpg);
                background-size: cover;
            }
            .content {
                padding: 20px;
                text-align: center;
            }
            table{
                background-color: lightsteelblue;
    
            }
            h1, h2 {
                text-align:center;
                border:revert-layer;
                border-color:gray;
                background-color: lightsteelblue;
            }
            
            .custom-button {
                background-color: steelblue;
                color: white;
            }
            ul {
                list-style-type: none;
                margin: 0;
                padding: 0;
            }
            li {
                float: left;
                width: 50%;
            }
            li a{
                display: block;
                padding: 8px;
                background-color: lightsteelblue;
                color: black;
            }

        </style>
    </head>
    <body>
        <div class="content">
        
           
        
        <h1>
            <strong>
                WEATHER OR NOT
            </strong>
        </h1>
        <ul>
            <li>
                <a asp-page="Hairtypes">All Hair Types</a>
            </li>
            <li>
                <a asp-page="WeatherData">Our Weather Data</a>
            </li>
        </ul>
        <div2 class="container text-center">
            <h2>Our Weather and Hair Patterns</h2>
            <table style="border: 2px thick steelblue" class="table table-bordered">
                <thead>
                    <tr>
                        <th style="border: 2px groove steelblue" class="text-center" >Weather Breakdown</th>
                        <th style="border: 2px groove steelblue" class="text-center">Hair Types</th>
                    </tr>
                </thead>
                <tbody>
                <td style="border: 2px groove steelblue"> <button onclick="window.location.href='Rainy.html'" class="custom-button">Rain</button></td>
                <td style="border: 2px groove steelblue"> <button onclick="window.location.href='Straight.html'" class="custom-button">Straight</button></td>
                </tr>
                <tr>
                    <td style="border: 2px groove steelblue"> <button onclick="window.location.href='Humidity.html'" class="custom-button">Humidity</button> </td>
                    <td style="border: 2px groove steelblue"> <button onclick="window.location.href='Curly.html'" class="custom-button">Curly</button></td>
                </tr>
                <tr>
                    <td style="border: 2px groove steelblue"> <button onclick="window.location.href='Sunny.html'" class="custom-button">Sunny</button> </td>
                    <td style="border: 2px groove steelblue"> <button onclick="window.location.href='Coily.html'" class="custom-button">Coily</button></td>
                </tr>
                </tbody>
            </table>
            <h2>
                More Weather Information at
                <a href="http://weather.com">The Weather Channel</a>
            </h2>
            <h2>
                Our Sources and Documentation
            </h2>
            <h2>
                <script>
                    var button = document.createElement("button");
                    button.innerHTML = "Documentation";
                    button.addEventListener("click", function () {
                        alert("Additional Weather Data Coming 2024");
                    });
                    document.body.appendChild(button);
                </script>
            </h2>
        </div2>
</div>
    </body>
</html>
